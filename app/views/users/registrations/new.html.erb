<div class="sign">
<h2>新規サインアップ</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
<div class="signup">
<div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(最低<%= @minimum_password_length %> 字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワードの確認 %> <em>（もう一度入力してください)</em>
   <br /> <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="signsign">
    <%= f.submit "サインアップ" %>
  </div>
<% end %>
 </div>
<%= render "users/shared/links" %>
